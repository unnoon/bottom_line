{
  "name": "bottom_line",
  "description": "JS Toolbelt",
  "version": "0.5.1",
  "homepage": "https://github.com/unnoon/bottom_line",
  "author": {
    "name": "Rogier Geertzema",
    "email": "r.geertzema@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/unnoon/bottom_line"
  },
  "license": "MIT",
  "keywords": [
    "tools",
    "utilities",
    "toolbelt",
    "utilitybelt"
  ],
  "scripts": {
    "build": "rimraf -rf bin/es6 && tsc --rootDir src/ --outDir bin/es6/ -p tsconfig.json --module ES6",
    "docs": "rimraf -rf doc && typedoc --options .typedoc.json --out doc/ src/",
    "release": "npm version",
    "precommit": "npm test",
    "prepush": "npm test",
    "preversion": "npm test && npm run docs",
    "version": "npm run build && git add -A bin",
    "postversion": "git push && git push --tags && npm publish",
    "test": "karma start --single-run",
    "update": "ncu -u -a && npm install"
  },
  "dependencies": {
    "@types/lodash": "^4.14.74",
    "@types/reflect-metadata": "^0.0.5",
    "core-js": "^2.5.0",
    "lodash": "^4.17.4",
    "lodash-decorators": "^4.4.1",
    "reflect-metadata": "^0.1.10"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.42",
    "@types/sinon": "^2.3.3",
    "awesome-typescript-loader": "^3.2.3",
    "chai": "^4.1.1",
    "coveralls": "^2.13.1",
    "husky": "^0.14.3",
    "karma": "^1.7.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.0.1",
    "karma-mocha": "^1.3.0",
    "karma-sinon": "^1.0.5",
    "karma-typescript": "^3.0.5",
    "metascript": "^1.0.0",
    "mocha": "^3.5.0",
    "rimraf": "^2.6.1",
    "sinon": "^3.2.1",
    "tslint": "^5.6.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.4.2",
    "webpack": "^3.5.5"
  }
}
