{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-eslint-rules"
  ],
  "rules": {
    "brace-style":     [true, "allman", {"allowSingleLine": true}],
    "max-line-length": [false],
    "one-line":        [true, "check-whitespace"],
    "no-conditional-assignment": false,
    "no-string-literal": false,
    "no-trailing-whitespace": false,
    "no-bitwise": false,
    "object-literal-sort-keys": false,
    "quotemark":       [true, "single", "jsx-single", "avoid-escape"],
    "semicolon":       [true, "always", "ignore-interfaces", "ignore-bound-class-methods"],
    "unified-signatures": false,
    "variable-name":   [true, "allow-snake-case", "allow-leading-underscore", "allow-trailing-underscore"],
    "whitespace":      [true, "check-decl", "check-operator", "check-module", "check-type", "check-typecast", "check-preblock"]
  }
}